{% extends 'base.html.twig' %}

{% block title %} Услуги {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% for service in services %}
        {{ service.service }}
        {{ service.cost }}
        <img src="{{ asset('uploads/serviceImages/' ~ service.image) }}" height="300px" class="card-img-top" alt="ошибка">
    {% endfor %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ form(form) }}
    {% endif %}
{% endblock %}